ssh ec2-user@<you amazon ec2-box>
# Install apache to obtain certificate
sudo yum install httpd
# Get a domain name for your server and enter it in your favorite DNS e.g. xmpp.incentergy.de
# Add it as a virual host in /etc/httpd/conf/httpd.conf
# Check your URL in the browser
# Get a certificate from letsencrypt
wget https://dl.eff.org/certbot-auto
chmod a+x certbot-auto
certbot-auto --debug
# Go through the wizard
# Install ejabberd
wget https://www.process-one.net/downloads/ejabberd/16.12/ejabberd-16.12-0.x86_64.rpm
sudo rpm -i ejabberd-16.12-0.x86_64.rpm
sudo su
cd /opt/ejabberd-16.12/conf
# copy ejabberyml.cfg from this folder
# Replace xmpp.incentergy.de with your hosts
# Concat evertificate for ejabbered
cat /etc/letsencrypt/live/xmpp.incentergy.de/privkey.pem /etc/letsencrypt/live/xmpp.incentergy.de/fullchain.pem > xmpp.incentergy.de.pem
chown ejabberd xmpp.incentergy.de.pem
# Make sure root certificates are correclty hashed
cd /etc/ssl/certs
ln -s dst-root-ca-x3.pem `openssl x509 -hash -noout -in dst-root-ca-x3.pem`.0
ln -s letsencrypt.pem `openssl x509 -hash -noout -in letsencrypt.pem`.0
# The following files must be there:
cat 2e5ac55d.0 
